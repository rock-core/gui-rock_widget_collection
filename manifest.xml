<package>
  <description brief="Collection of qt widgets which are compatible to qt designer">
  </description>
  <author>Alexander Duda/Alexander.Duda@dfki.de</author>
  <license></license>
  <url>http://</url>
  <logo>http://</logo>
  <depend package="base/types" />
  <depend package="image_processing/frame_helper" />
  <depend package="drivers/aggregator" />
  <depend package="freeglut3" />
  <depend_optional package="qwt5" />
  <depend package="vtk-qt4" optional="1"/>
  <depend package="qt5" optional="1" />
  <depend package="qt5-opengl" optional="1" />
  <depend package="qt5-designer" optional="1" />
